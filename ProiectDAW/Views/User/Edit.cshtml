
@{
    ViewBag.Title = "Edit user";
}

<h2>@ViewBag.Title</h2>
<br />
<form method="post" action="/user/edit/@ViewBag.User.id">
    @Html.HttpMethodOverride(HttpVerbs.Put)
    <label>Name:</label>
    <br />
    <input type="text" name="Name" value="@ViewBag.User.name" />
    <br /><br />
    <label>Age:</label>
    <br />
    <input type="text" name="Age" value="@ViewBag.User.age" />
    <br /><br />
    <label>Description</label>
    <br />
    <input type="text" name="Description" value="@ViewBag.User.description" />
    <br />
    <br />

    <button class="btn btn-success" type="submit">Confirm edit</button>

</form>



