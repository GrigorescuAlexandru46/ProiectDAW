@{
    ViewBag.Title = "Edit Profile";
}

<br />
<form method="post" action="/profile/edit/@ViewBag.Profile.Id">
    @Html.HttpMethodOverride(HttpVerbs.Put)

    <label>First Name:</label>
    <br />
    <input type="text" name="FirstName" value="@ViewBag.Profile.FirstName" />
    <br />

    <label>Last Name:</label>
    <br />
    <input type="text" name="LastName" value="@ViewBag.Profile.LastName" />
    <br />

    <label>Age:</label>
    <br />
    <input type="text" name="Age" value="@ViewBag.Profile.Age" />
    <br />

    <label>Description:</label>
    <br />
    <input type="text" name="Description" value="@ViewBag.Profile.Description" />
    <br />

    <br />
    <label>Private profile: </label>
    @Html.CheckBox("IsPrivate", (bool) ViewBag.Profile.IsPrivate)
    <br />

    <br />
    <button class="btn btn-success" type="submit">Confirm edit</button>
</form>